<div class="card">
    <div class="card-title">
        <h1><%= @page.title %></h1>
    </div>
    <div class="card-text">
        <p><%= @page.description %></p>
        <hr>
        <%= link_to 'Back', :back %>
        <%= link_to 'Edit', edit_page_path(@page) %>
        <%= link_to 'Delete', page_path(@page), method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
</div>
